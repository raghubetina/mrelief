<div class="page-header">
  <h1>Visions</h1>
</div>

<p><a href="/visions/new" class="btn btn-primary">Add a New Vision</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Vision gross income</th>
      <th>Vision household size</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @visions.each do |vision| %>
      <tr>
        <td><%= vision.vision_gross_income %></td>
        <td><%= vision.vision_household_size %></td>
        <td>
          <a href="/visions/<%= vision.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/visions/<%= vision.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_vision/<%= vision.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

