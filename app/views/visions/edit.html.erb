<div class="page-header">
  <h1>Edit Vision #<%= @vision.id %></h1>
</div>

<% if @vision.errors.any? %>
  <% @vision.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_vision/<%= @vision.id %>" class="form-horizontal">
  <!-- Label and input for vision_gross_income -->
  <div class="form-group">
    <label for="vision_gross_income" class="col-sm-2 control-label">
      Vision gross income
    </label>
    <div class="col-sm-10">
      <input type="text" id="vision_gross_income" name="vision_gross_income" placeholder="Vision gross income" class="form-control" value="<%= @vision.vision_gross_income %>">
    </div>
  </div>

  <!-- Label and input for vision_household_size -->
  <div class="form-group">
    <label for="vision_household_size" class="col-sm-2 control-label">
      Vision household size
    </label>
    <div class="col-sm-10">
      <input type="text" id="vision_household_size" name="vision_household_size" placeholder="Vision household size" class="form-control" value="<%= @vision.vision_household_size %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Vision" class="btn btn-primary">
    </div>
  </div>
</form>
