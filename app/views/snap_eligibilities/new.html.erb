<div class = "container">
<div class="page-header">
  <h1>Do I qualify for Food Stamps?</h1>
</div>

<% if @snap_eligibility.errors.any? %>
  <% @snap_eligibility.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_snap_eligibility" class="form-horizontal">


  <!-- Label and input for age -->
  <div class="form-group">
    <label for="age" class="col-sm-6 control-label">
      How old are you?
    </label>
    <div class="col-sm-6">
      <input type="text" id="age" name="age" placeholder="Age" class="form-control"
    </div>
    <br>
  </div>


  <!-- Label and input for snap_dependent_no -->
  <div class="form-group">
    <label for="snap_dependent_no" class="col-sm-6 control-label">
      How many dependents
     <button type="button" class="btn btn-default" data-container="body" data-toggle="popover" data-placement="bottom" data-content="a person in your household who relies on you for financial support">
        dependents
        </button>
      (including yourself) are in your household?
    </label>


    <div class="col-sm-6">
      <input type="text" id="snap_dependent_no" name="snap_dependent_no" placeholder="# of dependents" class="form-control" value="<%= @snap_eligibility.snap_dependent_no %>">
    </div>
  </div>

  <!-- Label and input for snap_gross_income -->
  <div class="form-group">
    <label for="snap_gross_income" class="col-sm-6 control-label">
      What is your
      <button type="button" class="btn btn-default" data-container="body" data-toggle="popover" data-placement="bottom" data-content="the total amount of money you make each month before taxes are taken out">
        gross monthly income?
        </button>

    </label>
    <div class="col-sm-6">
      <input type="text" id="snap_gross_income" name="snap_gross_income" placeholder="gross monthly income" class="form-control" value="<%= @snap_eligibility.snap_gross_income %>">
    </div>
    <br>
  </div>




  <div class="form-group">
    <div class="col-sm-offset-6 col-sm-6">
      <input type="submit" value="See if I qualify" class="btn btn-primary">
    </div>
  </div>
</form>
</div>
