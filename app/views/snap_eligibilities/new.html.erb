<div class= "container">

<div class="page-header" style="border:none">
  <h1>Do I qualify for Food Stamps?</h1>
  <p> Illinois provides people and families all over the state with financial support to purchase food. Fill out the form below to see if you qualify.</p>
</div>

    <% if @snap_eligibility.errors.any? %>
      <% @snap_eligibility.errors.full_messages.each do |message| %>
        <div class="alert alert-dismissable alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= message %>
        </div>
      <% end %>
    <% end %>

<div class="panel panel-default col-md-10" style="margin: 0 0 40px 0">
  <div class="panel-body">
    <form action="/create_snap_eligibility" role="form">

  <div class="form-group col-sm-9">
    <label for="age">How old are you?</label>
      <input type="text" id="age" name="age" placeholder="Age" class="form-control">
  </div>

  <!-- Label and input for snap_dependent_no -->
  <div class="form-group col-sm-9">
    <label for="snap_dependent_no">How many
        dependents <a data-toggle="popover" title="Popover title" data-placement="top" data-content="And here's some amazing content. It's very engaging. Right?"><i class="fa fa-info-circle"></i></a>
       <!--  </button> -->
      (including yourself) are in your household?
    </label>

    <div>
      <input type="text" id="snap_dependent_no" name="snap_dependent_no" placeholder="# of dependents" class="form-control" value="<%= @snap_eligibility.snap_dependent_no %>">
    </div>
  </div>

  <!-- Label and input for snap_gross_income -->
  <div class="form-group col-sm-9">
    <label for="snap_gross_income">
      What is your gross monthly income? <a data-toggle="popover" title="Popover title" data-placement="top" data-content="And here's some amazing content. It's very engaging. Right?"><i class="fa fa-info-circle"></i></a>
       <!--  </button> -->
    </label>

    <div class="input-group">
  <span class="input-group-addon">$</span>
  <input type="text" id="snap_gross_income" name="snap_gross_income" placeholder="gross monthly income"class="form-control" value="<%= @snap_eligibility.snap_gross_income %>">
  <span class="input-group-addon">.00</span>
</div>
    <div style="padding:40px 0 0 0">
      <button type="submit" class="btn btn-primary">Find out if I qualify</button>
    </div>
  </div>
</form>
</div>
</div>
</div>
