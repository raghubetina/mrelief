<div class= "container">

<div class="page-header" style="border:none">
   <h1>Do I qualify for RTA Ride Free?</h1>
  <p class="lead">If you are 65 and older or disabled, you may qualify for RTA Ride Free. <br>Please answer the following questions to find out:</p>
</div>

<% if @rta_free_ride.errors.any? %>
  <% @rta_free_ride.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="panel panel-default col-md-10" style="margin: 0 0 40px 0">
  <div class="panel-body">
    <form action="/create_snap_eligibility" role="form">

  <!-- Label and input for rta_dependent_no -->

  <div class="form-group col-sm-9">
    <label for="rta_dependent_no">How many dependents(including yourself) are in your household?</label>
      <input type="text" id="rta_dependent_no" name="rta_dependent_no" placeholder="# of dependents" class="form-control" value="<%= @rta_free_ride.rta_dependent_no %>">
  </div>


  <!-- Label and input for rta_gross_income -->
  <div class="form-group col-sm-9">
    <label for="rta_gross_income">
      What is your gross monthly income? <a data-toggle="popover" title="Popover title" data-placement="top" data-content="And here's some amazing content. It's very engaging. Right?"><i class="fa fa-info-circle"></i></a>
       <!--  </button> -->
    </label>

    <div class="input-group">
  <span class="input-group-addon">$</span>
  <input type="text" id="rta_gross_income" name="rta_gross_income" placeholder="gross monthly income" class="form-control" value= "<%= @rta_free_ride.rta_gross_income %>">
  <span class="input-group-addon">.00</span>
</div>

  <div style="padding:40px 0 0 0">
      <button type="submit" class="btn btn-primary">See if I qualify</button>
  </div>

  </div>
</form>
</div>
</div>

