<div class="page-header">
  <h1>Rental assistances</h1>
</div>

<p><a href="/rental_assistances/new" class="btn btn-primary">Add a New Rental Assistance</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Rental dependent no</th>
      <th>Rental gross income</th>
      <th>Rental status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rental_assistances.each do |rental_assistance| %>
      <tr>
        <td><%= rental_assistance.rental_dependent_no %></td>
        <td><%= rental_assistance.rental_gross_income %></td>
        <td><%= rental_assistance.rental_status %></td>
        <td>
          <a href="/rental_assistances/<%= rental_assistance.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/rental_assistances/<%= rental_assistance.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_rental_assistance/<%= rental_assistance.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

