<div class="page-header">
  <h1>Edit Wic #<%= @wic.id %></h1>
</div>

<% if @wic.errors.any? %>
  <% @wic.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_wic/<%= @wic.id %>" class="form-horizontal">
  <!-- Label and input for wic_household_size -->
  <div class="form-group">
    <label for="wic_household_size" class="col-sm-2 control-label">
      Wic household size
    </label>
    <div class="col-sm-10">
      <input type="text" id="wic_household_size" name="wic_household_size" placeholder="Wic household size" class="form-control" value="<%= @wic.wic_household_size %>">
    </div>
  </div>

  <!-- Label and input for wic_gross_income -->
  <div class="form-group">
    <label for="wic_gross_income" class="col-sm-2 control-label">
      Wic gross income
    </label>
    <div class="col-sm-10">
      <input type="text" id="wic_gross_income" name="wic_gross_income" placeholder="Wic gross income" class="form-control" value="<%= @wic.wic_gross_income %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Wic" class="btn btn-primary">
    </div>
  </div>
</form>
