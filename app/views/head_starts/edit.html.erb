<div class="page-header">
  <h1>Edit Head Start #<%= @head_start.id %></h1>
</div>

<% if @head_start.errors.any? %>
  <% @head_start.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_head_start/<%= @head_start.id %>" class="form-horizontal">
  <!-- Label and input for hs_dependent_no -->
  <div class="form-group">
    <label for="hs_dependent_no" class="col-sm-2 control-label">
      Hs dependent no
    </label>
    <div class="col-sm-10">
      <input type="text" id="hs_dependent_no" name="hs_dependent_no" placeholder="Hs dependent no" class="form-control" value="<%= @head_start.hs_dependent_no %>">
    </div>
  </div>

  <!-- Label and input for hs_gross_income -->
  <div class="form-group">
    <label for="hs_gross_income" class="col-sm-2 control-label">
      Hs gross income
    </label>
    <div class="col-sm-10">
      <input type="text" id="hs_gross_income" name="hs_gross_income" placeholder="Hs gross income" class="form-control" value="<%= @head_start.hs_gross_income %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Head Start" class="btn btn-primary">
    </div>
  </div>
</form>
