<div class="page-header">
  <h1>Edit Auto Repair Assistance #<%= @auto_repair_assistance.id %></h1>
</div>

<% if @auto_repair_assistance.errors.any? %>
  <% @auto_repair_assistance.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_auto_repair_assistance/<%= @auto_repair_assistance.id %>" class="form-horizontal">
  <!-- Label and input for auto_household_size -->
  <div class="form-group">
    <label for="auto_household_size" class="col-sm-2 control-label">
      Auto household size
    </label>
    <div class="col-sm-10">
      <input type="text" id="auto_household_size" name="auto_household_size" placeholder="Auto household size" class="form-control" value="<%= @auto_repair_assistance.auto_household_size %>">
    </div>
  </div>

  <!-- Label and input for auto_gross_income -->
  <div class="form-group">
    <label for="auto_gross_income" class="col-sm-2 control-label">
      Auto gross income
    </label>
    <div class="col-sm-10">
      <input type="text" id="auto_gross_income" name="auto_gross_income" placeholder="Auto gross income" class="form-control" value="<%= @auto_repair_assistance.auto_gross_income %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Auto Repair Assistance" class="btn btn-primary">
    </div>
  </div>
</form>
